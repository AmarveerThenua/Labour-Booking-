<%- include('../partials/header') %>

<h2 class="mb-4">My Labor Requests</h2>

<% if (bookings.length === 0) { %>
  <p>No requests sent.</p>
<% } else { %>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Labor Name</th>
        <th>Area</th>
        <th>Booking Date</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <% bookings.forEach(b => { %>
        <tr>
          <td><%= b.labor.user.name %></td>
          <td><%= b.labor.area %></td>
          <td><%= b.date.toLocaleDateString() %></td>
          <td>
            <span class="badge bg-<%= b.status === 'Pending' ? 'warning' : b.status === 'Accepted' ? 'success' : 'secondary' %>">
              <%= b.status %>
            </span>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } %>

<%- include('../partials/footer') %>
