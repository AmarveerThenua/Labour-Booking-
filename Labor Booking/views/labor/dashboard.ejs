<%- include('../partials/header') %>

  <h2 class="mb-4">Labor Dashboard</h2>
  <a href="/labor/profile" class="btn btn-outline-info mb-3">View Profile</a>
  <a href="/labor/requests" class="btn btn-outline-primary">View Booking Requests</a>


  <form method="POST" action="/labor/dashboard">

    <div class="mb-3">
      <label>Area</label>
      <input type="text" name="area" class="form-control" value="<%= labor ? labor.area : '' %>" required>
    </div>
    <div class="mb-3">
      <label>Skills</label>
      <input type="text" name="skills" class="form-control" value="<%= labor ? labor.skills : '' %>" required>
    </div>
    <div class="mb-3">
      <label>Availability</label>
      <select name="availability" class="form-control" required>
        <option value="Available" <%=labor && labor.availability==='Available' ? 'selected' : '' %>>Available</option>
        <option value="Busy" <%=labor && labor.availability==='Busy' ? 'selected' : '' %>>Busy</option>
      </select>
    </div>
    <div class="mb-3">
      <label>Daily Wage (in â‚¹)</label>
      <input type="number" name="dailyWage" class="form-control" value="<%= labor ? labor.dailyWage : '' %>" required>
    </div>
    <div class="mb-3">
      <label>Experience</label>
      <input type="text" name="experience" class="form-control" value="<%= labor ? labor.experience : '' %>" required>
    </div>
    <button type="submit" class="btn btn-success">Save Details</button>


  </form>

  <%- include('../partials/footer') %>