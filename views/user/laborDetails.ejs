<%- include('../partials/header') %>

<div class="container my-4">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <!-- Back Button -->
      <a href="javascript:history.back()" class="btn btn-outline-secondary mb-3">
        <i class="bi bi-arrow-left"></i> Back
      </a>

      <!-- Profile Card -->
      <div class="card shadow-sm border-0">
        <div class="card-body p-4">
          <!-- Rating Header -->
          <div class="text-center mb-4">
            <div class="h4 mb-2">
              <% for(let i=0; i<5; i++) { %>
                <i class="bi bi-star-fill text-warning"></i>
              <% } %>
              <span class="ms-2">4.5 / 5 (6 ratings)</span>
            </div>
          </div>

          <!-- Profile Info -->
          <div class="row align-items-center">
            <!-- Profile Image -->
            <div class="col-md-4 text-center mb-3">
              <% if (laborDetail.profileImage) { %>
                <img src="<%= laborDetail.profileImage %>" class="img-fluid rounded-circle" style="width: 150px; height: 150px; object-fit: cover;" alt="<%= laborDetail.user.name %>">
              <% } else { %>
                <div class="rounded-circle bg-light d-flex align-items-center justify-content-center mx-auto" style="width: 150px; height: 150px;">
                  <i class="bi bi-person" style="font-size: 4rem; color: #ccc;"></i>
                </div>
              <% } %>
            </div>

            <!-- Details -->
            <div class="col-md-8">
              <h2 class="mb-3"><%= laborDetail.user.name %></h2>
              
              <div class="mb-3">
                <div class="d-flex align-items-center mb-1">
                  <i class="bi bi-geo-alt-fill text-muted me-2"></i>
                  <span><%= laborDetail.area %></span>
                </div>
                <div class="d-flex align-items-center mb-1">
                  <i class="bi bi-phone-fill text-muted me-2"></i>
                  <span><%= laborDetail.user.mobile || 'Not provided' %></span>
                </div>
                <div class="d-flex align-items-center mb-1">
                  <i class="bi bi-tools text-muted me-2"></i>
                  <span><%= laborDetail.skills %></span>
                </div>
                <div class="d-flex align-items-center mb-1">
                  <i class="bi bi-check-circle-fill text-muted me-2"></i>
                  <span>Availability: <span class="badge bg-<%= laborDetail.availability === 'Available' ? 'success' : 'danger' %>">
                    <%= laborDetail.availability %>
                  </span></span>
                </div>
                <div class="d-flex align-items-center mb-1">
                  <i class="bi bi-cash-coin text-muted me-2"></i>
                  <span>Daily Wage: â‚¹<%= laborDetail.dailyWage %></span>
                </div>
                <div class="d-flex align-items-center">
                  <i class="bi bi-award text-muted me-2"></i>
                  <span>Experience: <%= laborDetail.experience %></span>
                </div>
              </div>
            </div>
          </div>

          <!-- Rating Progress Bars -->
          <div class="mt-4">
           
            
            <h5 class="mb-3">ACTIVITY: 90%</h5>
            <div class="progress" style="height: 20px;">
              <div class="progress-bar bg-success" role="progressbar" style="width: 90%" aria-valuenow="90" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
          </div>
        </div>
      </div>

      <!-- Booking Section -->
      <div class="card shadow-sm border-0 mt-3">
        <div class="card-body p-4">
          <h4 class="mb-3">Book This Laborer</h4>
          <form action="/book/<%= laborDetail._id %>" method="POST">
            
            <button type="submit" class="btn btn-primary w-100 py-2" <%= laborDetail .availability === 'Busy' ? 'disabled' : '' %>>
              <i class="bi bi-calendar-check me-2"></i>
              <%= laborDetail.availability === 'Available' ? 'Confirm Booking' : 'Not Available' %>
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .progress-bar {
    transition: width 0.6s ease;
  }
  .card {
    border-radius: 10px;
  }
  .badge {
    font-size: 0.8rem;
    padding: 0.35em 0.65em;
  }
</style>

<%- include('../partials/footer') %>