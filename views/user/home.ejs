User home

<%- include('../partials/header') %>

  <div class="container my-5">
    <a href="/my-requests" class="btn btn-outline-info mb-4 rounded-pill px-4">
      <i class="bi bi-list-check me-2"></i>View My Requests
    </a>

    <% if (labors.length===0) { %>
      <div class="text-center py-5">
        <img src="/no-results.png" alt="No laborers" class="img-fluid mb-4" style="max-height: 200px;">
        <h4 class="text-muted">No laborers available at the moment</h4>
        <p class="text-muted">Please check back later</p>
      </div>
      <% } %>

        <div class="row g-3 g-md-4">
          <% labors.forEach(labor=> { %>
            <div class="col-6 col-md-6 col-lg-4">
              <!-- Move the anchor tag inside the card div -->
              <div class="card h-100 border-0 shadow-hover overflow-hidden"
                style="transition: transform 0.3s, box-shadow 0.3s;">
                <!-- Make the top part of card clickable -->
                <a href="/laborDetails/<%=labor._id%>" class="text-decoration-none text-dark">
                  <div class="position-relative">
                    <% if (labor.profileImage) { %>
                      <img src="<%= labor.profileImage %>" class="card-img-top labor-image"
                        alt="<%= labor.user.name %>">
                      <% } else { %>
                        <img src="/default-avatar.png" class="card-img-top labor-image" alt="Default profile">
                        <% } %>
                          <div class="position-absolute top-0 end-0 m-1 m-md-3">
                            <span
                              class="badge rounded-pill bg-<%= labor.availability === 'Available' ? 'success' : 'danger' %> px-2 py-1">
                              <%= labor.availability %>
                            </span>
                          </div>
                  </div>

                  <div class="card-body d-flex flex-column p-3 p-md-3">
                    <div class="mb-2 mb-md-3">
                      <h4 class="card-title fw-bold text-dark mb-1 mb-md-2" style="font-size: 1rem;">
                        <%= labor.user.name %>
                      </h4>

                      <div class="d-flex align-items-center mb-1 mb-md-2">
                        <i class="bi bi-geo-alt-fill text-muted me-1 me-md-2" style="font-size: 0.8rem;"></i>
                        <span class="text-muted" style="font-size: 0.8rem;">
                          <%= labor.area %>
                        </span>
                      </div>

                      <div class="mb-1 mb-md-2">
                        <span class="badge bg-light text-dark border me-1 mb-1"
                          style="font-size: 0.7rem; padding: 0.25rem 0.5rem;">
                          <i class="bi bi-tools me-1"></i>
                          <%= labor.skills %>
                        </span>
                      </div>

                      <div class="d-flex justify-content-between mb-1 mb-md-2" style="font-size: 0.8rem;">
                        <div>
                          <i class="bi bi-currency-rupee text-muted"></i>
                          <span class="fw-bold">
                            <%= labor.dailyWage %>
                          </span>
                          <span class="text-muted">/day</span>
                        </div>

                        <div>
                          <i class="bi bi-star-fill text-warning"></i>
                          <span class="fw-bold">
                            <%= labor.averageRating %>
                          </span>
                        </div>
                      </div>
                    </div>
                  </div>
                </a>

                <!-- Keep the form outside the anchor tag -->
                <form action="/book/<%= labor._id %>" method="POST" class="mt-auto p-3 pt-0">
                  <button type="submit"
                    class="btn btn-primary w-100 rounded-pill py-1 py-md-2 fw-bold <%= labor.availability === 'Busy' ? 'disabled' : '' %>"
                    style="font-size: 0.8rem;" <%=labor.availability==='Busy' ? 'disabled' : '' %>>
                    <i class="bi bi-calendar-check me-1"></i>
                    <%= labor.availability==='Busy' ? 'Not Available' : 'Book Now' %>
                  </button>
                </form>
              </div>
            </div>
            <% }) %>
        </div>
  </div>

  <style>
    .shadow-hover:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }

    .labor-image {
      height: 180px;
      /* Reduced height for mobile */
      object-fit: cover;
      object-position: center;
      width: 100%;
    }

    .badge.bg-light {
      border: 1px solid #dee2e6 !important;
    }

    /* Responsive adjustments */
    @media (min-width: 768px) {
      .labor-image {
        height: 250px;
        /* Original height for larger screens */
      }
    }
  </style>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css" rel="stylesheet">
  <%- include('../partials/footer') %>